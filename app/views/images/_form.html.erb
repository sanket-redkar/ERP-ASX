<%= simple_form_for @image, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@image[:name]) %>
  <%= f.input :reporting_id %>
  <%= error_span(@image[:reporting_id]) %>
  <%= f.input :image_file_name %>
  <%= error_span(@image[:image_file_name]) %>
  <%= f.input :image_content_type %>
  <%= error_span(@image[:image_content_type]) %>
  <%= f.input :image_file_size %>
  <%= error_span(@image[:image_file_size]) %>
  <%= f.input :image_updated_at %>
  <%= error_span(@image[:image_updated_at]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                images_path, :class => 'btn btn-default' %>
<% end %>
