- model_class = OohSite
- content_for :head do
  = t '.title', default: model_class.model_name.human.pluralize.titleize
.page-header
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:code)
      %th= model_class.human_attribute_name(:latitude)
      %th= model_class.human_attribute_name(:longitude)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:address)
      %th= model_class.human_attribute_name(:type)
      %th= t '.actions', default: t("helpers.actions")
  %tbody
    - @ooh_sites.each do |ooh_site|
      %tr
        %td= link_to ooh_site.id, ooh_site_path(ooh_site)
        %td= ooh_site.code
        %td= ooh_site.latitude
        %td= ooh_site.longitude
        %td= ooh_site.name
        %td= ooh_site.address
        %td= ooh_site.type
        %td
          = link_to t('.show', :default => t("helpers.links.show")), ooh_site_path(ooh_site), :class => 'btn btn-default btn-xs'
          = link_to t('.edit', :default => t("helpers.links.edit")),edit_ooh_site_path(ooh_site), :class => 'btn btn-default btn-xs'
          = link_to 'Reporting', reportings_path(search: { ooh_site_id: ooh_site.id }), class: 'btn btn-default btn-xs'
          =# link_to t('.destroy', :default => t("helpers.links.destroy")),ooh_site_path(ooh_site), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
= link_to t('.new', :default => t("helpers.links.new")), new_ooh_site_path, :class => 'btn btn-primary'
