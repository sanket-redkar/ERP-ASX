- model_class = OohSite
- content_for :head do
  = "#{t '.title', :default => model_class.model_name.human.titleize} : #{@ooh_site.name}"

.page-header
  %h1
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd
  %dt
    %strong
      = model_class.human_attribute_name(:code)
      \:
  %dd= @ooh_site.code
  %dt
    %strong
      = model_class.human_attribute_name(:latitude)
      \:
  %dd= @ooh_site.latitude
  %dt
    %strong
      = model_class.human_attribute_name(:longitude)
      \:
  %dd= @ooh_site.longitude
  %dt
    %strong
      = model_class.human_attribute_name(:address)
      \:
  %dd= @ooh_site.address
  %dt
    %strong
      = model_class.human_attribute_name(:type)
      \:
  %dd= @ooh_site.type.split('::')[1]

= link_to t('.back', default: t("helpers.links.back")), ooh_sites_path, class: 'btn btn-default'
= link_to t('.edit', default: t("helpers.links.edit")), edit_ooh_site_path(@ooh_site), class: 'btn btn-default'
= link_to t('.destroy', default: t("helpers.links.destroy")), ooh_site_path(@ooh_site), method: 'delete', data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
