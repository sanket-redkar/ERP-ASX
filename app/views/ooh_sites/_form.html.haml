= simple_form_for(@ooh_site.becomes(OohSite), html: { class: 'horizontal-form ooh_site display-grid' }) do |f|
  = error_messages(@ooh_site)
  = f.input :type, as: :select, collection: OohSite.subclass_names.collect{ |os| [os.split('::')[1], os] }, prompt: 'Select Type', required: true
  = f.input :name, required: true
  = f.input :authority
  = f.input :code, required: true
  = f.input :address, required: true
  = f.input :locality
  = f.input :city
  = f.input :latitude
  = f.input :longitude
  = f.input :image, as: :file
  - if @ooh_site.image.url
    = image_tag @ooh_site.image.url, class: 'img-circle', width: 100, height: 100
  .pull-right.mar-top-1
    = f.submit nil, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), ooh_sites_path, class: 'btn btn-default'
